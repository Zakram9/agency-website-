    <script>
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth', block: 'start' });
                }
            });
        });

        document.getElementById('heroForm').addEventListener('submit', function(e) {
            e.preventDefault();
            alert('Thank you for your request! We will contact you within 2 hours with a detailed quote.');
            this.reset();
        });

        document.querySelector('#contact form').addEventListener('submit', function(e) {
            e.preventDefault();
            alert('Thank you for contacting us! We will respond within 30 minutes.');
            this.reset();
        });

        const floatingForm = document.querySelector('.floating-form');
        const floatingFormBtn = document.getElementById('floatingFormBtn');
        const floatingFormPanel = document.getElementById('floatingFormPanel');
        const closeFloatingForm = document.getElementById('closeFloatingForm');
        const quickForm = document.getElementById('quickForm');

        window.addEventListener('scroll', () => {
            if (window.scrollY > 500) {
                floatingForm.classList.add('visible');
            } else {
                floatingForm.classList.remove('visible');
                floatingFormPanel.classList.remove('active');
            }
        });

        floatingFormBtn.addEventListener('click', () => {
            floatingFormPanel.classList.toggle('active');
        });

        closeFloatingForm.addEventListener('click', () => {
            floatingFormPanel.classList.remove('active');
        });

        quickForm.addEventListener('submit', function(e) {
            e.preventDefault();
            alert('Thank you! We will contact you shortly.');
            this.reset();
            floatingFormPanel.classList.remove('active');
        });
    </script>
